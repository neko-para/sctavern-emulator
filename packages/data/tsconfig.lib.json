{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ES2015",
    "declaration": true,
    "incremental": true,
    "outDir": "./dist",
    "tsBuildInfoFile": "../../tmp/buildcache/data",
    "types": ["node"]
  },
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/scripts/*.js",
    "dist"
  ],
  "include": ["**/*.ts"]
}
