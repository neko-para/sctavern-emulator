{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "composite": true,
    "module": "ESNext",
    "declaration": true,
    "incremental": true,
    "outDir": "../../node_modules/@sctavern-emulator/data",
    "tsBuildInfoFile": "../../tmp/buildcache/data",
    "types": ["node"]
  },
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/scripts/*.js",
    "dist"
  ],
  "include": ["**/*.ts", "./package.json"]
}
